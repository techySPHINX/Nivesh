# ML Services Configuration
# Copy this file to .env and update with your values

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_REGISTRY_URI=postgresql://postgres:password@localhost:5432/nivesh

# Feature Store (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=nivesh_password
FEATURE_TTL_SECONDS=3600

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/nivesh

# Model Storage
MODEL_STORAGE_BACKEND=local
MODEL_STORAGE_PATH=./models
S3_BUCKET=
GCS_BUCKET=

# Model Server
MODEL_SERVER_HOST=0.0.0.0
MODEL_SERVER_PORT=8000
MODEL_CACHE_SIZE=10

# Training Configuration
TRAINING_BATCH_SIZE=16
TRAINING_EPOCHS=3
LEARNING_RATE=2e-5

# Intent Classification
INTENT_MODEL_NAME=distilbert-base-uncased
INTENT_MAX_LENGTH=128
INTENT_CONFIDENCE_THRESHOLD=0.7

# NER
NER_MODEL_NAME=en_core_web_sm

# Spending Prediction
SPENDING_FORECAST_HORIZON=365

# Anomaly Detection
ANOMALY_CONTAMINATION=0.01
ANOMALY_THRESHOLD=-0.5

# Credit Risk
CREDIT_RISK_THRESHOLD=0.5

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_MONITORING=true

# Drift Detection
DRIFT_DETECTION_ENABLED=true
DRIFT_CHECK_INTERVAL_HOURS=24
DRIFT_ALERT_THRESHOLD=0.3

# Google AI (Gemini) - REQUIRED for Gemini Advisor
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Logging
LOG_LEVEL=INFO
