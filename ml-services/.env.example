# Flask/FastAPI Configuration
FLASK_ENV=development
DEBUG=True
PORT=5000

# Model Server Configuration
MODEL_PATH=./models
MODEL_CACHE_DIR=./model_cache
MAX_WORKERS=4

# AI/ML API Keys
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_TOKEN=your-huggingface-token

# Database (if ML service needs direct DB access)
DATABASE_URL=postgresql://postgres:password@localhost:5432/nivesh

# ClickHouse (for analytics)
CLICKHOUSE_HOST=http://localhost:8123
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=nivesh

# Redis (for caching predictions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Model Configuration
CATEGORIZATION_MODEL_PATH=./models/transaction_categorizer.pkl
ANOMALY_MODEL_PATH=./models/anomaly_detector.pkl
SENTIMENT_MODEL_PATH=./models/sentiment_analyzer

# Inference Settings
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512
CONFIDENCE_THRESHOLD=0.75

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ml-service.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
